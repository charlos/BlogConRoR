<h1><%=action_name %> articulo</h1>
<%= form_for(@article) do |f| %>
	<% @article.errors.full_messages.each do |message| %>
		<div>
			* <%= message %>
		</div>
	<%end%>
	<div>
		<%= f.text_field :title, placeholder: "Titulo" %>
	</div>
	<div>
		<%= f.file_field :cover %>
	</div>
	<div>
		<%= f.text_area :body, placeholder: "Escribe aqui el articulo", style:"heigth:250px" %>
	</div>
	<div>
		<label>Categor√≠as</label>
		<% @categories.each do |category| %>
			<% #muestra un check HTML %>
			<%= check_box_tag "categories[]", category.id %>
			<% #muestra el nombre de la categoria %>
			<%= category.name %>
		<%end%>
	</div>
	<div>
		<%= f.submit "Guardar" %>
	</div>
	
<%end%>